{
  "name": "simpler-mocks",
  "version": "0.0.0-development",
  "description": "REST API mock server made simple. Runs on Node with YAML and JSON mock definitions.",
  "keywords": [
    "api",
    "cli",
    "file-based",
    "json",
    "mock",
    "mocks",
    "node",
    "node.js",
    "rest",
    "server",
    "yaml",
    "yml"
  ],
  "license": "MIT",
  "author": "Ronald Jerez",
  "main": "./src/server.js",
  "bin": {
    "simpler-mocks": "./src/cli.js"
  },
  "files": [
    "src/**/*"
  ],
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "start": "nodemon ./src/cli.js -- -p 8080 './tests'",
    "samples": "node ./src/cli.js './samples'",
    "prof": "node --prof ./src/cli.js -p 8080 './tests'",
    "test": "jest --coverage",
    "test:watch": "jest --watchAll --coverage",
    "semantic-release": "semantic-release",
    "pretty": "prettier --write \"{src,tests}/**/*.js\""
  },
  "dependencies": {
    "argparse": "^1.0.10",
    "chance": "^1.1.7",
    "chokidar": "^3.4.1",
    "globby": "^11.0.1",
    "js-yaml": "^3.14.0",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
    "koa-logger": "^3.2.1",
    "koa-router": "^9.1.0",
    "lodash.get": "^4.4.2",
    "lodash.isequalwith": "^4.4.0",
    "lodash.ismatchwith": "^4.4.0",
    "minimatch": "^3.0.4"
  },
  "devDependencies": {
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.2.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "semantic-release": "^19.0.3",
    "supertest": "^4.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/RonaldJerez/simpler-mocks.git"
  },
  "bugs": {
    "url": "https://github.com/RonaldJerez/simpler-mocks/issues"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "npx pretty-quick --staged",
      "pre-push": "yarn test"
    }
  }
}
